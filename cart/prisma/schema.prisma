generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Connection URLs are no longer supported in schema files.
  // Move database connection configuration to prisma.config.ts and pass
  // an adapter or accelerateUrl to the PrismaClient as described in:
  // https://pris.ly/d/config-datasource and https://pris.ly/d/prisma7-client-config
}

model Cart {
  id String @id @default(cuid())
  userId String @unique
  items CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem{
  id String @id @default(cuid())
  cartId String
  productId String
  variantId String

  name String
  localName String
  image String?
  label String
  price Int
  quantity Int

  cart Cart @relation(fields: [cartId],references: [id])

  @@unique([cartId,productId,variantId])
}